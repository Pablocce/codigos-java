package Bucles2;
import java.util.Scanner;
public class main {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		int edad = 0,suma=0,alumnos=0;
		float media;
		while (edad>0) {
			System.out.println("Introduzca eadd:");
			edad = teclado.nextInt();
			alumnos = alumnos + 1; 
			suma = suma + edad;
		}
		media = suma / alumnos;
	}

}
